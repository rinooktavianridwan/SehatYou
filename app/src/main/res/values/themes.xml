        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.SehatYou.Splash" parent="Theme.SehatYou">
        <!-- Background warna Splash Screen -->
        <item name="android:windowSplashScreenBackground">@color/white</item>

        <!-- Ikon di tengah layar Splash -->
